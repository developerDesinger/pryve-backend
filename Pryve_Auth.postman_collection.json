{
  "info": {
    "name": "Pryve Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Auth flows: register, verify OTP, set/reset password, login, me, change password, update profile, and Google social login. Updated: added collection-level Bearer auth and improved request descriptions."
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Register (Create User)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/create",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "create"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"fullName\": \"Test User\"\n}"
        },
        "description": "Create a new user. Server will send an OTP for verification when applicable."
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "verify-otp"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": 123456\n}"
        },
        "description": "Verify OTP sent to the user's email. Use the OTP value returned/sent by the system."
      }
    },
    {
      "name": "Resend OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/resend-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "resend-otp"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        },
        "description": "Request to resend OTP to the given email."
      }
    },
    {
      "name": "Set/Reset Password (with OTP)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/update-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "update-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"userId\": \"<fill-from-verify-token-or-db>\",\n  \"otp\": 123456,\n  \"newPassword\": \"Secret123\"\n}"
        },
        "description": "Set or reset password using OTP. Provide the OTP and userId obtained from verification or DB."
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret123\"\n}"
        },
        "description": "Authenticate with email and password. Response returns a token to set in the {{token}} variable for authenticated requests."
      }
    },
    {
      "name": "Forgot Password (send OTP)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/forgot-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "forgot-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        },
        "description": "Initiate forgot password flow. An OTP will be sent to the email for resetting the password."
      }
    },
    {
      "name": "Me (User by token)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/user-by-token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "user-by-token"]
        },
        "description": "Get current user details using Bearer token. Make sure {{token}} is set (collection-level auth uses it)."
      }
    },
    {
      "name": "Change Password (auth)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/change-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "change-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"oldPassword\": \"Secret123\",\n  \"newPassword\": \"NewSecret123\"\n}"
        },
        "description": "Change password for authenticated user. Ensure Authorization header or collection token is set."
      }
    },
    {
      "name": "Update Profile (auth)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/update-profile/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "update-profile", "{{userId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Updated Name\",\n  \"userName\": \"updated_username\",\n  \"profilePhoto\": \"https://example.com/photo.jpg\",\n  \"gender\": \"Male\",\n  \"dateOfBirth\": \"1990-01-01T00:00:00.000Z\",\n  \"country\": \"United States\",\n  \"region\": \"California\",\n  \"phoneNumber\": \"+1234567890\",\n  \"bio\": \"This is my bio\"\n}"
        },
        "description": "Update profile fields for the user with id {{userId}}. Requires auth."
      }
    },
    {
      "name": "Google Social Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/v1/users/social-login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "users", "social-login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"provider\": \"GOOGLE\",\n  \"providerId\": \"google-oauth-sub\",\n  \"userName\": \"user\",\n  \"firstName\": \"First\",\n  \"lastName\": \"Last\",\n  \"profilePhoto\": \"https://example.com/avatar.jpg\"\n}"
        },
        "description": "Social login endpoint (Google). Creates or returns user and token."
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "userId", "value": "" }
  ]
}
