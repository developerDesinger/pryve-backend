    {
      "name": "Get Journey Page Data (Custom Limits)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/journey?favoriteLimit=20&chatLimit=10&messageLimit=20",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "journey"],
          "query": [
            {
              "key": "favoriteLimit",
              "value": "20",
              "description": "Number of favorite messages to return (default: 10)"
            },
            {
              "key": "chatLimit",
              "value": "10",
              "description": "Number of recent chats to return (default: 5)"
            },
            {
              "key": "messageLimit",
              "value": "20",
              "description": "Number of recent messages to return (default: 10)"
            }
          ]
        },
        "description": "Get journey page data with custom limits for favorites, chats, and messages."
      },
      "response": []
