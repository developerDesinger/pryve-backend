{
  "info": {
    "name": "Pryve System Rules API",
    "description": "API endpoints for managing system rules that control AI behavior",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Get All System Rules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules"]
        }
      },
      "response": []
    },
    {
      "name": "Get Active System Rules",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/active",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "active"]
        }
      },
      "response": []
    },
    {
      "name": "Get System Rule by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/{{ruleId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "{{ruleId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Create System Rule - Content Filter",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"No Political Discussions\",\n  \"category\": \"CONTENT_FILTER\",\n  \"ruleType\": \"RESTRICTION\",\n  \"content\": \"Avoid engaging in political discussions or taking political stances. Redirect to neutral topics when political questions arise.\",\n  \"description\": \"Prevents AI from engaging in political discussions\",\n  \"priority\": 7,\n  \"severity\": \"HIGH\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules"]
        }
      },
      "response": []
    },
    {
      "name": "Create System Rule - Bot Identity",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Custom Bot Name\",\n  \"category\": \"IDENTITY\",\n  \"ruleType\": \"IDENTITY\",\n  \"content\": \"Your name is MyCustomBot and you were developed by MyCompany Inc. Always introduce yourself with this identity when asked.\",\n  \"description\": \"Custom bot identity and developer information\",\n  \"priority\": 9,\n  \"severity\": \"HIGH\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules"]
        }
      },
      "response": []
    },
    {
      "name": "Create System Rule - Behavioral Guideline",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Professional Tone\",\n  \"category\": \"BEHAVIOR\",\n  \"ruleType\": \"GUIDELINE\",\n  \"content\": \"Always maintain a professional and formal tone in all interactions. Use proper grammar and avoid casual language.\",\n  \"description\": \"Ensures professional communication style\",\n  \"priority\": 5,\n  \"severity\": \"MEDIUM\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules"]
        }
      },
      "response": []
    },
    {
      "name": "Update System Rule",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Updated rule content with new instructions\",\n  \"description\": \"Updated description\",\n  \"priority\": 8\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/{{ruleId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "{{ruleId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Toggle System Rule Status",
      "request": {
        "method": "PATCH",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/{{ruleId}}/toggle",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "{{ruleId}}", "toggle"]
        }
      },
      "response": []
    },
    {
      "name": "Get Rules by Category - Content Filter",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/category/CONTENT_FILTER",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "category", "CONTENT_FILTER"]
        }
      },
      "response": []
    },
    {
      "name": "Get Rules by Category - Identity",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/category/IDENTITY",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "category", "IDENTITY"]
        }
      },
      "response": []
    },
    {
      "name": "Get Rules by Category - Behavior",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/category/BEHAVIOR",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "category", "BEHAVIOR"]
        }
      },
      "response": []
    },
    {
      "name": "Delete System Rule",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/system-rules/{{ruleId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "system-rules", "{{ruleId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "ruleId",
      "value": "rule-id-here",
      "type": "string"
    }
  ]
}